{
  "eslintConfig": {
    "extends": ["react-app", "shared-config"],
    "plugins": ["react-hooks"],
    "rules": {
      "additional-rule": "warn",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    },
    "overrides": [
      {
        "files": ["**/*.js?(x)"],
        "rules": {}
      }
    ]
  }
}
